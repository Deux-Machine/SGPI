@model SGPI.Models.Usuario

@{
    ViewData["Tittle"] = "CrearUsuario";
    Layout = "_Layout";
}


<!-- ESTILO PARA EL ENCABEZADO -->
<style>
    nav {
        margin: 27px auto 0;
        position: relative;
        width: 590px;
        height: 50px;
        background-color: #34495e;
        border-radius: 8px;
        font-size: 0;
    }

        nav a {
            line-height: 24px;
            height: 100%;
            font-size: 13px;
            display: inline-block;
            position: relative;
            z-index: 1;
            text-decoration: none;
            text-transform: uppercase;
            text-align: center;
            color: white;
            cursor: pointer;
        }

        nav .animation {
            position: absolute;
            height: 100%;
            top: 0;
            z-index: 0;
            transition: all .5s ease 0s;
            border-radius: 8px;
        }

    a:nth-child(1) {
        width: 100px;
    }

    a:nth-child(2) {
        width: 110px;
    }

    a:nth-child(3) {
        width: 100px;
    }

    a:nth-child(4) {
        width: 160px;
    }

    a:nth-child(5) {
        width: 120px;
    }

    nav .start-home, a:nth-child(1):hover ~ .animation {
        width: 100px;
        left: 0;
        background-color: #1abc9c;
    }

    nav .start-about, a:nth-child(2):hover ~ .animation {
        width: 110px;
        left: 100px;
        background-color: #e74c3c;
    }

    nav .start-blog, a:nth-child(3):hover ~ .animation {
        width: 100px;
        left: 210px;
        background-color: #3498db;
    }

    nav .start-portefolio, a:nth-child(4):hover ~ .animation {
        width: 160px;
        left: 310px;
        background-color: #9b59b6;
    }

    nav .start-contact, a:nth-child(5):hover ~ .animation {
        width: 120px;
        left: 470px;
        background-color: #e67e22;
    }

    body {
        font-size: 12px;
        font-family: sans-serif;
        background: #2c3e50;
    }

    h1 {
        text-align: center;
        margin: 40px 0 40px;
        text-align: center;
        font-size: 30px;
        color: #ecf0f1;
        text-shadow: 2px 2px 4px #000000;
        font-family: 'Cherry Swash', cursive;
    }

    p {
        position: absolute;
        bottom: 20px;
        width: 100%;
        text-align: center;
        color: #ecf0f1;
        font-family: 'Cherry Swash',cursive;
        font-size: 16px;
    }

    span {
        color: #2BD6B4;
    }

</style>


<!-- ESTILO PARA EL FORMULARIO -->
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }


    h1 {
        font-family: cursive;
        font-size: medium;
    }

    body {
        background-image: url('https://img.freepik.com/foto-gratis/edificios-centricos-angeles-noche_649448-298.jpg?w=900&t=st=1698941805~exp=1698942405~hmac=f1ca66cd00d47380c19a8afdd31dbaa1225943fdeb92e93f664e44fc7c5b02af');
        background-size: 100% 100%;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    form {
        width: 1000px;
        background-color: #041B2A;
        padding: 30px;
        margin: auto;
        margin-top: 50px;
        border-radius: 4px;
        font-family: Calibri;
        color: lightgrey;
        box-shadow: 20px 25px 43px #000;
    }

    .form-control {
        background: #C1E2EF;
        padding: 10px;
        border-radius: 4px;
        margin-bottom: 16px;
        border: 1px solid #07687b;
        color: black;
    }

    .form-btn {
        width: 35%;
        padding: 8px;
        background: #1f53c5;
        border: 1px solid #07687b;
    }

    /*Para el cambiar el color de letra del nombre de las columnas de la tabla*/
    table.table.table-striped thead th {
        color: white;
    }

    /*Para el cambiar el color de letra la busqueda en la tabla*/
    table.table.table-striped tbody td {
        color: white;
    }
</style>

<div class="container">
    <nav class="topnavA">
        <a class="active" href="~/Administrador/CrearUsuario" style="color: white;">Crear Usuario</a>
        <a href="~/Administrador/BuscarUsuario" style="color: white;">Buscar Usuario</a>
        <div class="animation start-home"></div>
    </nav>


    <form method="post" class="container">
        <div class="row mb-3">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Nombre">NOMBRES</label>
                    <input asp-for="Nombre" class="form-control" />
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="PrimerApellido">PRIMER APELLIDO</label>
                    <input asp-for="PrimerApellido" class="form-control" />
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="SegundoApellido">SEGUNDO APELLIDO</label>
                    <input asp-for="SegundoApellido" class="form-control" />
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="Id_Genero">GÉNERO</label>
                    @Html.DropDownList("Id_Genero", new SelectList(ViewBag.genero, "Id_Genero", "Descripcion"), new {@class = "form-control dropdown"})
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label for="Id_Doc">TIPO DE DOCUMENTO</label>
                    @Html.DropDownList("Id_Doc", new SelectList(ViewBag.Documento, "Id_Doc", "Descripcion"), new {@class = "form-control dropdown"})
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="NumDoc">NÚMERO DE DOCUMENTO</label>
                    <input asp-for="NumDoc" class="form-control" />
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Email">E-MAIL</label>
                    <input asp-for="Email" class="form-control" />
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Password">CONTRASEÑA</label>
                    <input asp-for="Password" type="password" class="form-control" />
                </div>
            </div>
        
            <div class="col-md-4">
                <div class="form-group">
                    <label for="Id_Rol">ROL</label>
                    @Html.DropDownList("Id_Rol", new SelectList(ViewBag.rol, "Id_Rol", "Descripcion"), new {@class = "form-control dropdown"})
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="Id_Programa">PROGRAMA</label>
                    @Html.DropDownList("Id_Programa", new SelectList(ViewBag.programa, "Id_Programa", "Descripcion"), new {@class = "form-control dropdown"})
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group form-check">
                    <input class="form-check-input" type="checkbox" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">Activo</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-primary">GUARDAR</button>
            </div>
        </div>
    </form>
</div>