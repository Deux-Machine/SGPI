@model SGPI.Models.Usuario
@{
    ViewData["Title"] = "Entrevista";
    Layout = "_Layout";
}


<!-- ESTILO PARA EL ENCABEZADO -->
<style>
    nav {
        margin: 27px auto 0;
        position: relative;
        width: 590px;
        height: 50px;
        background-color: #34495e;
        border-radius: 8px;
        font-size: 0;
    }

        nav a {
            line-height: 24px;
            height: 100%;
            font-size: 13px;
            display: inline-block;
            position: relative;
            z-index: 1;
            text-decoration: none;
            text-transform: uppercase;
            text-align: center;
            color: white;
            cursor: pointer;
        }

        nav .animation {
            position: absolute;
            height: 100%;
            top: 0;
            z-index: 0;
            transition: all .5s ease 0s;
            border-radius: 8px;
        }

    a:nth-child(1) {
        width: 100px;
    }

    a:nth-child(2) {
        width: 110px;
    }

    a:nth-child(3) {
        width: 100px;
    }

    a:nth-child(4) {
        width: 160px;
    }

    a:nth-child(5) {
        width: 120px;
    }

    nav .start-home, a:nth-child(1):hover ~ .animation {
        width: 100px;
        left: 0;
        background-color: #1abc9c;
    }

    nav .start-about, a:nth-child(2):hover ~ .animation {
        width: 110px;
        left: 100px;
        background-color: #e74c3c;
    }

    nav .start-blog, a:nth-child(3):hover ~ .animation {
        width: 100px;
        left: 210px;
        background-color: #3498db;
    }

    nav .start-portefolio, a:nth-child(4):hover ~ .animation {
        width: 160px;
        left: 310px;
        background-color: #9b59b6;
    }

    nav .start-contact, a:nth-child(5):hover ~ .animation {
        width: 120px;
        left: 470px;
        background-color: #e67e22;
    }

    body {
        font-size: 12px;
        font-family: sans-serif;
        background: #2c3e50;
    }

    h1 {
        text-align: center;
        margin: 40px 0 40px;
        text-align: center;
        font-size: 30px;
        color: #ecf0f1;
        text-shadow: 2px 2px 4px #000000;
        font-family: 'Cherry Swash', cursive;
    }

    p {
        position: absolute;
        bottom: 20px;
        width: 100%;
        text-align: center;
        color: #ecf0f1;
        font-family: 'Cherry Swash',cursive;
        font-size: 16px;
    }

    span {
        color: #2BD6B4;
    }

</style>


<!-- ESTILO PARA EL FORMULARIO -->
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }


    h1 {
        font-family: cursive;
        font-size: medium;
    }

    body {
        background-image: url('https://img.freepik.com/foto-gratis/edificios-centricos-angeles-noche_649448-298.jpg?w=900&t=st=1698941805~exp=1698942405~hmac=f1ca66cd00d47380c19a8afdd31dbaa1225943fdeb92e93f664e44fc7c5b02af');
        background-size: 100% 100%;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    form {
        width: 1000px;
        background-color: #041B2A;
        padding: 30px;
        margin: auto;
        margin-top: 50px;
        border-radius: 4px;
        font-family: Calibri;
        color: lightgrey;
        box-shadow: 20px 25px 43px #000;
    }

    .form-control {
        background: #C1E2EF;
        padding: 10px;
        border-radius: 4px;
        margin-bottom: 16px;
        border: 1px solid #07687b;
        color: black;
    }

    .form-btn {
        width: 35%;
        padding: 8px;
        background: #1f53c5;
        border: 1px solid #07687b;
    }

    /*Para el cambiar el color de letra del nombre de las columnas de la tabla*/
    table.table.table-striped thead th {
        color: white;
    }

    /*Para el cambiar el color de letra la busqueda en la tabla*/
    table.table.table-striped tbody td {
        color: white;
    }
</style>



<nav>
    <a href="~/Coordinador/Programacion">Programar Asignaturas</a>
    <a href="~/Coordinador/Homologacion">Homologar Materias</a>
    <a class="active" href="~/Coordinador/Entrevista">Entrevistas y Admisiones</a>
    <a href="~/Coordinador/Pagos">Pagos Estudiantes</a>
    <div class="animation start-home"></div>
</nav>

<div class="container">
    <div class="cuacenterC">
        <div class="bus">
            <form method="post">
                <div class="cont1">
                    <div class="row">
                        <div class="col-md-4">
                            <label for="identificacion">Tipo Identificación</label>
                            <select name="identificacion" id="identificacion">
                                <option value="Cedula Ciudadania">Cedula Ciudadania</option>
                                <option value="Tarjeta de Identidad">Tarjeta de Identidad</option>
                                <option value="Cedula de Extranjeria">Cedula de Extranjeria</option>
                                <option value="Pasaporte">Pasaporte</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label for="doc">Número de Documento</label>
                            <input asp-for="NumDoc" type="text"/>
                        </div>
                        <div class="col-md-4">
                            <input type="submit" name="buscar" value="Buscar" class="buscar-submit" />
                        </div>
                    </div>
                </div>

                <div class="cont1">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="name">Nombre</label>
                            <input asp-for="Nombre" type="text"/>
                        </div>
                        <div class="col-md-3">
                            <label for="priApel">Primer Apellido</label>
                            <input asp-for="PrimerApellido" type="text"/>
                        </div>
                        <div class="col-md-3">
                            <label for="segApel">Segundo Apellido</label>
                            <input asp-for="SegundoApellido" type="text"/>
                        </div>
                    </div>
                </div>

                <div class="cont1">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="comen">Comentarios de la entrevista</label>
                            <textarea id="w3review" name="w3review" rows="4" cols="40"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label for="programa">Programa</label>
                            <select name="programa" id="programa">
                                <option value="Especialización en seguridad informatica">Especialización en seguridad informatica</option>
                                <option value="Maestria en gestión TI">Maestria en gestión TI</option>
                                <option value="Maestria en medio ambiente">Maestria en medio ambiente</option>
                            </select>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
